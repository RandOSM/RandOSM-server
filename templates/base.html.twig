<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}-- Rand'OSM{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
</head>

<body>
<nav class="navbar navbar-default">
    <div class="container">

        <div class="navbar-header">
            <a class="navbar-brand" href="/">
                <img class="navbar-brand-img" alt="brand" src="{{ asset('assets/img/brand.svg') }}"/>
            </a>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="navbar-right" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                {# TODO: change link to generated route #}
                <li>
                    <button class="btn btn-default" href="/user/signin}">Sign In</button>
                </li>
                <li>
                    <button class="btn btn-default" href="/user/login">Login</button>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class="menu-left">
        {{ render(controller('App\\Controller\\MenuController::Menu')) }}
    </div>
    <div class="body">
        {% block body %}{% endblock %}
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('build/js/app.js') }}"></script>
{% endblock %}
</body>

</html>
